<div id="layout-blog" class="pure-g">
  <div class="content-blog pure-u-1 pure-u-md-3-4">

    <div class="questions">
      <h1 class="content-subhead-blog">Recent Topics | {{#link-to 'questions.new'}}+New Topic{{/link-to}}</h1>

      {{#each question in controller}}
        <section class="post">
          <header class="post-header">
            <h2 class="post-title">{{#link-to 'question' question}}{{question.subject}}{{/link-to}}</h2>
            <p class="post-meta">
              By {{question.user.githubUsername}} | {{question.formattedUpdatedAt}}
            </p>
          </header>
        </section>
      {{/each}}
    </div>

  </div>
</div>

<div class="content-wrapper">
  <div class="footer l-box is-center">
