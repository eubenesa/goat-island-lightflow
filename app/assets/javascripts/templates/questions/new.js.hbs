<h1>questions#create</h1>
<form>
  <fieldset>
    <dl>
      <dt><label>Topic:</label></dt>
      <dd>{{view Ember.TextArea valueBinding="fields.subject"}}</dd>
    </dl>

    <dl>
      <dt><label>Details:</label></dt>
      <dd>{{view Ember.TextArea valueBinding="fields.content"}}</dd>
    </dl>
  </fieldset>

  <fieldset class="actions">
    <input type="submit" value="Create Topic" {{action 'createQuestion' on="click"}}>
  </fieldset>
</form>
