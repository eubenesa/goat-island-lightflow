<div id="layout-blog" class="pure-g">
  <div class="content-blog pure-u-1 pure-u-md-3-4">

    <div class="answers">
      <h1 class="content-subhead-blog">Recent Answers | {{#link-to 'answers.new'}}+Your Answer{{/link-to}}</h1>

      {{#each answer in controller}}
        <section class="post">
          <header class="post-header">
            <div class="post-description">
              <p>{{answer.content}}</p>
            </div>
            <p class="post-meta">
              By {{answer.user.githubUsername}} | {{answer.formattedUpdatedAt}}
            </p>
          </header>
        </section>
      {{/each}}
    </div>

  </div>
</div>

<div class="content-wrapper">
  <div class="footer l-box is-center">
    <a href="https://twitter.com/EubeneSa" class="made-with-love">Eubene Sa</a> &copy 2014 | Made with <a href="http://emberjs.com/" class="made-with-love">&#9829</a> at Lighthouse Labs in Gastown, Beautiful British Columbia
  </div>
</div>
