<div id="layout-blog" class="pure-g">
  <div class="content-blog pure-u-1 pure-u-md-3-4">

    <div class="question">
      <h1 class="content-subhead-blog">Viewing Topic</h1>

      <section class="post">
        <header class="post-header">
          <h2 class="post-title">{{subject}}</h2>
          <p class="post-meta">
            By {{user.githubUsername}} | {{formattedUpdatedAt}}
          </p>
        </header>
        <div class="post-description">
          <p>{{model.content}}</p>
        </div>
      </section>
    </div>

{{!--     <div class="answers">
      <h1 class="content-subhead-blog">{{#link-to 'answers.index'}}Answers{{/link-to}}</h1>
    </div> --}}

    <div class="answers">
      <h1 class="content-subhead-blog">Recent Answers | {{#link-to 'answers.new'}}+Your Answer{{/link-to}}</h1>

      {{#each answer in model.answers}}
        <section class="post">
          <header class="post-header">
            <div class="post-description">
              <p>{{answer.content}}</p>
            </div>
            <p class="post-meta">
              By {{answer.user.githubUsername}} | {{answer.formattedUpdatedAt}}
            </p>
          </header>
        </section>
      {{/each}}
    </div>

  </div>
</div>

